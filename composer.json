{
  "name": "flix-tech/avro-serializer",
  "description": "A library to serialize Avro records making use of the confluent schema registry",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Ploch",
      "email": "thomas.ploch@flixbus.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "flix-tech/confluent-schema-registry-api": "^4.0",
    "widmogrod/php-functional": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.2",
    "phpstan/phpstan": "~0.6",
    "friendsofphp/php-cs-fixer": "~2.0",
    "phpbench/phpbench": "~0.9",
    "vlucas/phpdotenv": "~2.4"
  },
  "autoload": {
    "psr-4": {
      "FlixTech\\AvroSerializer\\Objects\\": "src/Objects"
    },
    "files": [
      "src/Protocol.php",
      "src/Serialize.php",
      "src/Common.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "FlixTech\\AvroSerializer\\Test\\": "test/",
      "FlixTech\\AvroSerializer\\Benchmarks\\": "benchmarks/"
    }
  }
}
